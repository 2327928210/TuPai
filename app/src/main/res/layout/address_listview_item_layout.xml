<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_90">

        <LinearLayout
            android:id="@+id/edit_rel"
            android:layout_width="@dimen/layout_x_80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/layout_x_2"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/layout_y_10"
                android:layout_marginTop="@dimen/layout_y_10"
                android:background="#ccc" />

            <TextView
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="编辑"
                android:textColor="#00b8ff"
                android:textSize="@dimen/layout_x_20" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/text_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/edit_rel"
            android:orientation="horizontal"
            android:padding="@dimen/layout_x_5">

            <TextView
                android:id="@+id/name_text"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_333"
                android:textSize="@dimen/layout_x_20" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_15"
                android:text="18865522905"
                android:textColor="@color/color_888"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text2_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_rel"
            android:layout_toLeftOf="@+id/edit_rel"
            android:orientation="horizontal"
            android:padding="@dimen/layout_x_5">

            <TextView
                android:id="@+id/moren_text"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:textColor="#00b8ff"
                android:textSize="@dimen/layout_x_18" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_x_5"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/color_888"
                android:textSize="@dimen/layout_x_17" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_2"
        android:background="#ccc" />
</LinearLayout>
