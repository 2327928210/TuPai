<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rtv="http://schemas.android.com/apk/res/com.haoke.picturepat"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_y_90"
    android:background="@drawable/white_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_x_15"
    android:paddingRight="@dimen/layout_x_15" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/ck_ele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_x_15"
            android:background="@drawable/iov_ele"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:text="" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_x_5"
                android:text="APP创建围栏"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_25" />

            <com.haoke.picturepat.view.RichText
                android:id="@+id/rv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/layout_x_5"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/gray_6"
                android:textSize="@dimen/layout_x_16"
                android:lines="1"
                android:ellipsize="end"
                rtv:icon_direction="left"
                rtv:icon_height="@dimen/layout_y_25"
                rtv:icon_src_normal="@drawable/iov_ele_location"
                rtv:icon_width="@dimen/layout_y_20" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_radius"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="@dimen/layout_y_15"
            android:text="@string/iov_ele_radius"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/layout_x_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_1"
        android:background="@color/gray_ef" />

</LinearLayout>