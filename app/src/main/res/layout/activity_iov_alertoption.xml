<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rtv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_titlebar" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/transparent"
        android:scrollbars="none"
        android:smoothScrollbar="true" >
    </ListView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_y_1"
        android:background="@color/gray_b" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_70" >

        <Button
            android:id="@+id/bt_all"
            android:layout_width="@dimen/layout_x_100"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/white_bg"
            android:text="@string/iov_AlertOption_all"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_20" />

        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="@dimen/layout_x_80"
            android:layout_height="@dimen/layout_y_45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_x_10"
            android:background="@drawable/blue_bt_bg"
            android:text="@string/iov_AlertOption_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_x_20" />
    </RelativeLayout>

</LinearLayout>