<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_titlebar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_x_20"
        android:layout_marginTop="@dimen/layout_x_40"
        android:text="@string/binding_text"
        android:textColor="@color/black"
        android:textSize="@dimen/layout_x_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_x_20" >

        <com.haoke.picturepat.edittext.IMEIEdit
            android:id="@+id/ed_imei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext"
            android:padding="@dimen/layout_x_10"
            android:textSize="@dimen/layout_x_20" />

        <Button
            android:id="@+id/bt_code"
            android:layout_width="@dimen/layout_x_40"
            android:layout_height="@dimen/layout_x_40"
            android:layout_marginLeft="@dimen/layout_x_20"
            android:background="@drawable/register_code"
            android:text="" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_ensure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_60"
        android:layout_margin="@dimen/layout_x_20"
        android:background="@drawable/shape_login_bt"
        android:text="@string/binding_ensure"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_x_20" />

</LinearLayout>