<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_50"
        android:layout_margin="@dimen/layout_x_10"
        android:layout_marginTop="@dimen/layout_x_100"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:text="物流号:"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_18" />
        <com.haoke.picturepat.edittext.IMEIEdit
            android:layout_marginLeft="@dimen/layout_x_20"
            android:id="@+id/ed_imei"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/layout_x_290"
            android:layout_height="@dimen/layout_y_43"
            android:maxLines="1"
            android:padding="@dimen/layout_x_2"
            android:paddingLeft="@dimen/layout_x_5"
            android:background="@drawable/shape_edittext"
            android:textSize="@dimen/layout_x_20" />

        <Button
            android:id="@+id/bt_code"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/layout_x_40"
            android:layout_height="@dimen/layout_x_40"
            android:layout_marginLeft="@dimen/layout_x_20"
            android:background="@drawable/register_code"
            android:text="" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="可直接扫描物流编码上传物流单号"
        android:textColor="@color/color_999"
        android:textSize="@dimen/layout_x_17" />
    <Button
        android:layout_marginTop="@dimen/layout_y_30"
        android:id="@+id/bt_ensure"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/layout_x_230"
        android:layout_height="@dimen/layout_x_50"
        android:background="#ff9900"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_x_20" />

</LinearLayout>