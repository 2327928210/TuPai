<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_x_20"
    android:paddingTop="@dimen/layout_x_10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_x_10"
        android:paddingRight="@dimen/layout_x_10" >

        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="@dimen/layout_x_280"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="IMEI:12345615"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_18" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_x_10"
            android:paddingRight="@dimen/layout_x_10"
            android:text="@string/cue_Online_send"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_16" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_sendhistory"
            android:gravity="center"
            android:text="成功"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_x_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_x_10"
        android:paddingRight="@dimen/layout_x_10" >

        <TextView
            android:id="@+id/tv_instruct"
            android:layout_width="@dimen/layout_x_280"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="断油电"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/layout_x_18" />

        <TextView
            android:id="@+id/tv_createtime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2018/01/08 21:21:21"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/layout_x_15" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_status_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="@dimen/layout_x_10"
        android:paddingRight="@dimen/layout_x_10"
        android:text="指令执行成功"
        android:textColor="@color/black"
        android:textSize="@dimen/layout_x_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_1"
        android:layout_marginTop="@dimen/layout_x_10"
        android:background="@color/gray_a" />

</LinearLayout>