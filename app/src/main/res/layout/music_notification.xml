<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_bg"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/layout_x_10"
    android:paddingTop="@dimen/layout_x_10" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/layout_x_70"
        android:layout_height="@dimen/layout_x_70"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_x_15"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_x_10" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:maxLines="1"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:maxLines="1"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/layout_x_15"
        android:gravity="center" >

        <ImageView
            android:id="@+id/bt_play"
            android:layout_width="@dimen/layout_x_50"
            android:layout_height="@dimen/layout_x_50"
            android:layout_marginRight="@dimen/layout_x_5"
            android:src="@drawable/main_music_play" />

        <ImageView
            android:id="@+id/bt_next"
            android:layout_width="@dimen/layout_x_42"
            android:layout_height="@dimen/layout_x_42"
            android:src="@drawable/main_music_next" />
    </LinearLayout>

</LinearLayout>