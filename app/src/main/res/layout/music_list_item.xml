<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/v_play"
        android:layout_width="@dimen/layout_x_5"
        android:layout_height="@dimen/layout_y_80"
        android:background="@color/blue_n" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_x_20"
        android:paddingRight="@dimen/layout_x_20"
        android:paddingTop="@dimen/layout_x_15" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_25" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_6"
            android:textSize="@dimen/layout_x_16" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/layout_x_15"
            android:background="@color/gray_6" />
    </LinearLayout>

</RelativeLayout>