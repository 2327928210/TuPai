<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haoke.picturepat.photo.activity.PaymentActivity">

    <include layout="@layout/layout_titlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_61">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_x_30"
            android:text="微信支付"
            android:textColor="@color/color_333"
            android:textSize="@dimen/layout_x_20" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/layout_x_36"
            android:layout_height="@dimen/layout_x_36"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_x_30"
            android:scaleType="fitXY"
            android:src="@drawable/zhufu_cg" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/layout_x_30"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ccc"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/layout_x_20"
        android:text="查看更多支付方式"
        android:textColor="@color/color_333"
        android:textSize="@dimen/layout_x_20" />

    <RelativeLayout
        android:id="@+id/pay_rel"
        android:layout_width="@dimen/layout_x_300"
        android:layout_height="@dimen/layout_y_50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_y_20"
        android:background="#ff9900">

        <TextView
            android:id="@+id/monry_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/layout_x_10"
            android:text="确认支付 ￥0.00"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_x_17" />
    </RelativeLayout>
</LinearLayout>
