<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_x_450"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog"
    android:orientation="vertical"
    android:padding="1px" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_x_10"
        android:paddingRight="@dimen/layout_x_10" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_x_10" >

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/layout_x_400"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/gview_1"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginRight="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />

                <ImageView
                    android:id="@+id/gview_2"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginLeft="@dimen/layout_x_5"
                    android:layout_marginRight="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />

                <ImageView
                    android:id="@+id/gview_3"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginLeft="@dimen/layout_x_5"
                    android:layout_marginRight="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />

                <ImageView
                    android:id="@+id/gview_4"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginLeft="@dimen/layout_x_5"
                    android:layout_marginRight="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />

                <ImageView
                    android:id="@+id/gview_5"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginLeft="@dimen/layout_x_5"
                    android:layout_marginRight="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />

                <ImageView
                    android:id="@+id/gview_6"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginLeft="@dimen/layout_x_5"
                    android:layout_marginRight="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />

                <ImageView
                    android:id="@+id/gview_7"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginLeft="@dimen/layout_x_5"
                    android:layout_marginRight="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />

                <ImageView
                    android:id="@+id/gview_8"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginLeft="@dimen/layout_x_5"
                    android:layout_marginRight="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />

                <ImageView
                    android:id="@+id/gview_9"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_x_80"
                    android:layout_marginLeft="@dimen/layout_x_5"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_pick_photo" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_x_10"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="@dimen/layout_x_25"
                android:layout_height="@dimen/layout_x_25"
                android:layout_marginRight="@dimen/layout_x_10"
                android:src="@drawable/photo_edit_gps" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_x_10"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="@dimen/layout_x_25"
                android:layout_height="@dimen/layout_x_25"
                android:layout_marginRight="@dimen/layout_x_10"
                android:src="@drawable/dialog_photo_distance" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_x_1"
            android:background="@color/gray_a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_50" >

        <TextView
            android:id="@+id/tv_navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_bg"
            android:gravity="center"
            android:text="@string/photo_dialog_navigation"
            android:textColor="@drawable/blue_bt"
            android:textSize="@dimen/layout_x_20" />

        <View
            android:layout_width="@dimen/layout_x_1"
            android:layout_height="match_parent"
            android:background="@color/gray_a" />

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_bg"
            android:gravity="center"
            android:text="@string/photo_dialog_shop"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_20" />
    </LinearLayout>

</LinearLayout>