<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_x_15" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_70"
        android:layout_weight="1"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南山智园"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_x_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="深圳市南山"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/layout_x_16" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/ck"
            android:layout_width="@dimen/layout_x_20"
            android:layout_height="@dimen/layout_x_15"
            android:layout_margin="@dimen/layout_x_10"
            android:background="@drawable/ck_poilist"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_x_1"
        android:background="@color/gray_a" />

</LinearLayout>