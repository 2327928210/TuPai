<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haoke.picturepat.photo.activity.AddAddressActivity">

    <include layout="@layout/layout_titlebar" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:hint="收货人"
        android:padding="@dimen/layout_x_15"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_999"
        android:textCursorDrawable="@drawable/text_custor"
        android:textSize="@dimen/layout_x_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <EditText
        android:id="@+id/editText_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="18"
        android:padding="@dimen/layout_x_15"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_999"
        android:textCursorDrawable="@drawable/text_custor"
        android:textSize="@dimen/layout_x_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <TextView
        android:id="@+id/text_diqu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="@dimen/layout_x_15"
        android:singleLine="true"
        android:text="所在地区"
        android:textColor="@color/color_999"
        android:textSize="@dimen/layout_x_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <EditText
        android:id="@+id/editText_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:hint="详细地址: 如道路、门牌号、小区、楼栋号、单元室等"
        android:maxLines="3"
        android:padding="@dimen/layout_x_15"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_999"
        android:textCursorDrawable="@drawable/text_custor"
        android:textSize="@dimen/layout_x_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_20"
        android:background="#ddd" />

    <RelativeLayout
        android:id="@+id/rel_door"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_60"
        android:background="@color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_x_15"
            android:text="设为默认地址"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_18" />

        <RelativeLayout
            android:id="@+id/MySwitch_door"
            android:layout_width="@dimen/layout_y_69"
            android:layout_height="@dimen/layout_y_44"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/switch_on"
            android:paddingRight="@dimen/layout_x_20"></RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_20"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/rel_delect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/layout_x_15"
            android:text="删除收货地址"
            android:textColor="#f00"
            android:textSize="@dimen/layout_x_18" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dddddd" />
</LinearLayout>
