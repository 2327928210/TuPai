<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rtv="http://schemas.android.com/apk/res-auto"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ef"
    android:orientation="vertical" >

    <include layout="@layout/layout_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_x_10"
        android:background="@drawable/shape_white"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_80"
            android:gravity="center" >

            <ImageView
                android:id="@+id/image_mycar"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_x_60"
                android:layout_margin="@dimen/layout_x_10"
                android:src="@drawable/iov_deviceinfo_car" />

            <HorizontalScrollView
                android:id="@+id/Scroll_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/layout_x_5" >

                    <ImageView
                        android:id="@+id/image_mycar_1"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_1_n" />

                    <ImageView
                        android:id="@+id/image_mycar_2"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_2_n" />

                    <ImageView
                        android:id="@+id/image_mycar_3"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_3_n" />

                    <ImageView
                        android:id="@+id/image_mycar_4"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_4_n" />

                    <ImageView
                        android:id="@+id/image_mycar_5"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_5_n" />

                    <ImageView
                        android:id="@+id/image_mycar_6"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_6_n" />

                    <ImageView
                        android:id="@+id/image_mycar_7"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_7_n" />

                    <ImageView
                        android:id="@+id/image_mycar_8"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_8_n" />

                    <ImageView
                        android:id="@+id/image_mycar_9"
                        android:layout_width="@dimen/layout_x_60"
                        android:layout_height="@dimen/layout_x_60"
                        android:layout_margin="@dimen/layout_x_5"
                        android:background="@drawable/scroll_car_image"
                        android:src="@drawable/mycar_front_9_n" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:gravity="center" >

            <TextView
                android:layout_width="@dimen/layout_x_80"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/iov_deviceinfo_brand"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_25" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AA"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_25" />

            <com.haoke.picturepat.edittext.NameEdit
                android:id="@+id/ed_brand"
                android:layout_width="@dimen/layout_x_300"
                android:layout_height="@dimen/layout_y_40"
                android:background="@drawable/shape_edittext"
                android:paddingLeft="@dimen/layout_x_5"
                android:paddingRight="@dimen/layout_x_5"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_25"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_marginBottom="@dimen/layout_x_5"
            android:layout_marginTop="@dimen/layout_x_5"
            android:gravity="center" >

            <TextView
                android:layout_width="@dimen/layout_x_80"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/iov_deviceinfo_sim"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/layout_x_20" />

            <TextView
                android:id="@+id/tv_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_x_5"
                android:text="123"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/layout_x_20" />

            <com.haoke.picturepat.edittext.PhoneEdit
                android:id="@+id/ed_sim"
                android:layout_width="@dimen/layout_x_300"
                android:layout_height="@dimen/layout_y_40"
                android:background="@drawable/shape_edittext"
                android:paddingLeft="@dimen/layout_x_5"
                android:paddingRight="@dimen/layout_x_5"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/layout_x_20"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iov_deviceinfo_type"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/layout_x_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_x_100" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.haoke.picturepat.view.RichText
                    android:id="@+id/rt_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/iov_deviceinfo_remo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/layout_x_18"
                    rtv:icon_direction="top"
                    rtv:icon_height="@dimen/layout_y_40"
                    rtv:icon_src_normal="@drawable/iov_deviceinfo_remove_n"
                    rtv:icon_src_pressed="@drawable/iov_deviceinfo_remove_p"
                    rtv:icon_width="@dimen/layout_y_40"
                    rtv:text_color_pressed="@color/blue_p" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.haoke.picturepat.view.RichText
                    android:id="@+id/rt_apn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/iov_deviceinfo_apn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/layout_x_18"
                    rtv:icon_direction="top"
                    rtv:icon_height="@dimen/layout_y_40"
                    rtv:icon_src_normal="@drawable/iov_deviceinfo_apn_n"
                    rtv:icon_src_pressed="@drawable/iov_deviceinfo_apn_p"
                    rtv:icon_width="@dimen/layout_y_40"
                    rtv:text_color_pressed="@color/blue_p" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.haoke.picturepat.view.RichText
                    android:id="@+id/rt_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/iov_deviceinfo_flow"
                    android:textColor="@color/black"
                    android:textSize="@dimen/layout_x_18"
                    rtv:icon_direction="top"
                    rtv:icon_height="@dimen/layout_y_40"
                    rtv:icon_src_normal="@drawable/iov_deviceinfo_flow_n"
                    rtv:icon_src_pressed="@drawable/iov_deviceinfo_flow_p"
                    rtv:icon_width="@dimen/layout_y_40"
                    rtv:text_color_pressed="@color/blue_p" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_150"
        android:layout_margin="@dimen/layout_x_10"
        android:background="@drawable/shape_white" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_imei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_x_5"
                android:text="@string/iov_deviceinfo_imei"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/layout_x_20" />

            <TextView
                android:id="@+id/tv_imsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_x_5"
                android:text="@string/iov_deviceinfo_imsi"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/layout_x_16" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_x_5"
                android:text="@string/iov_deviceinfo_date"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/layout_x_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_x_5"
                android:text="@string/iov_deviceinfo_day_date"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_30" />

            <TextView
                android:id="@+id/tv_valid_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_x_5"
                android:text="@string/iov_deviceinfo_valid_date"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>