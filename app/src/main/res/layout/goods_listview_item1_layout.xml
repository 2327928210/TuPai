<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_yuanjiao"
        android:layout_marginTop="@dimen/layout_x_10"
        android:layout_marginLeft="@dimen/layout_x_10"
        android:layout_marginRight="@dimen/layout_x_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:padding="@dimen/layout_x_10">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="@dimen/layout_x_120"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="新疆哈密瓜..."
                android:textColor="#333"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                android:layout_width="@dimen/layout_x_8"
                android:layout_height="@dimen/layout_x_12"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/layout_x_15"
                android:layout_toRightOf="@+id/goods_name"
                android:src="@drawable/setting_arrow" />


            <TextView
                android:id="@+id/goods_statue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_10"
                android:text="待发货"
                android:textColor="#ff9900"
                android:textSize="@dimen/layout_x_20" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:layout_marginTop="@dimen/layout_x_5">

            <ImageView
                android:id="@+id/goods_image"
                android:layout_width="@dimen/layout_x_125"
                android:layout_height="@dimen/layout_x_125"
                android:background="@drawable/background_yuanjiao"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <RelativeLayout
                android:id="@+id/right_rel"
                android:layout_width="@dimen/layout_x_80"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/layout_x_15">

                <TextView
                    android:id="@+id/goods_danjia_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="￥ 99.99"
                    android:textColor="@color/color_888"
                    android:textSize="@dimen/layout_x_17" />

                <TextView
                    android:id="@+id/goods_shuliang_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/goods_danjia_text"
                    android:layout_marginTop="@dimen/layout_x_5"
                    android:text="x1"
                    android:textColor="@color/color_888"
                    android:textSize="@dimen/layout_x_15" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/goods_all_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/goods_image"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/layout_x_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_all_shujuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共1件商品 合计: "
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/layout_x_17" />

                <TextView
                    android:id="@+id/goods_all_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥ 99.99"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/layout_x_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/goods_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_x_0"
                android:layout_toLeftOf="@+id/right_rel"
                android:layout_toRightOf="@+id/goods_image"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="商品描述sdafsafsafdsafsfsadfasdfasfsadfsafsafdasdfsadfsadfsdafdsafsafsadfasfdfafsadfdfaf"
                android:textColor="#333"
                android:textSize="@dimen/layout_x_18" />

            <LinearLayout
                android:id="@+id/goods_wuliu_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/goods_all_rel"
                android:layout_marginBottom="@dimen/layout_x_15"
                android:layout_marginRight="@dimen/layout_x_15"
                android:layout_marginTop="@dimen/layout_x_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_wuliu"
                    android:layout_width="@dimen/layout_x_90"
                    android:layout_height="@dimen/layout_x_36"
                    android:background="@drawable/goods_chankan_wuliu"
                    android:gravity="center"
                    android:text="查看物流"
                    android:textColor="@color/color_888"
                    android:textSize="@dimen/layout_x_17" />

                <TextView
                    android:id="@+id/goods_shouhuo"
                    android:layout_width="@dimen/layout_x_90"
                    android:layout_height="@dimen/layout_x_36"
                    android:layout_marginLeft="@dimen/layout_x_10"
                    android:background="@drawable/goods_querenshouhuo"
                    android:gravity="center"
                    android:text="确认收货"
                    android:textColor="#ff9900"
                    android:textSize="@dimen/layout_x_17" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/layout_y_1"-->
        <!--android:background="#eee" />-->
</LinearLayout>
